{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.1",
  "id": "{BOT_MICROSOFT_APP_ID}",
  "packageName": "com.pi-top.rover",
  "developer": {
    "name": "pi-top & Microsoft",
    "websiteUrl": "https://pi-top.com",
    "privacyUrl": "https://pi-top.com",
    "termsOfUseUrl": "https://pi-top.com"
  },
  "validDomains": [
    "{REPLACE-WITH-BOT-DOMAIN}"
  ],
  "icons": {
    "color": "rover.png",
    "outline": "rover.png"
  },
  "name": {
    "short": "Rover",
    "full": "pi-top [4] Rover Bot"
  },
  "description": {
    "short": "Collaborative rover coding with pi-top [4]",
    "full": "pi-top Rover Bot allows you to interactively code rover behaviours. Paste your code into a message in a markdown code fence, then use the '@Code' messaging extension to run the code using .NET Interactive."
  },
  "accentColor": "#00AD9F",
  "bots": [
    {
      "botId": "{BOT_MICROSOFT_APP_ID}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ]
}